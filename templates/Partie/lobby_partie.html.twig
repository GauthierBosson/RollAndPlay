<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
{% block body %}
    <h1>lobby</h1>
    <a href="/creer-une-partie">Créer une partie</a>
    {% for partie in parties  %}
        <div>
            {{ partie.nom | gamelink }}
            {{ partie.nom }}
            {{ partie.description }}
            <a href="{{ path('index_partie', {'nom': partie.nom, 'id': partie.id}) }}">Accéder à la partie</a>
            <a href="{{ path('delete_partie', {'id': partie.id }) }}">Delete</a>
        </div>
    {% endfor %}
    <a href="/">accueil</a>
{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
